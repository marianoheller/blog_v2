<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
</head>
<body>
    <h2>AJAX</h2>
    <h3> {{ controllerExecutedAt.format('Y-m-d H:i:s') }}</h3>
    <button type="button" onclick="loadDoc()">Request data</button>
    <p id="demo"></p>
    {% block ajaxRequest %} {% endblock %}


    <script>
        function loadDoc() {
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (xhttp.readyState == 4 && xhttp.status == 200) {
                    document.getElementById("demo").innerHTML = xhttp.responseText;
                }
            };
            xhttp.open("GET", "/cmd/test_ajax", true);
            xhttp.send();
        }
    </script>

</body>
</html>

